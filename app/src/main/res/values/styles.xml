<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/black_two</item>
        <item name="android:textColorHint">@color/black_two</item>
        <item name="android:colorControlActivated">@color/bright_blue</item>
        <item name="helpTextColor">@color/orange_yellow</item>
        <item name="android:paddingTop">8dp</item>
        <item name="helpTextSize">16sp</item>
        <item name="inputTextColor">@color/black_two</item>
        <item name="inputTextSize">18sp</item>
    </style>

    <style name="InvestmentInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/black_two</item>
        <item name="android:textColorHint">@color/black_two</item>
        <item name="android:colorControlActivated">@color/bright_blue</item>
        <item name="helpTextColor">@color/orange_yellow</item>
        <item name="helpTextSize">16sp</item>
        <item name="inputTextColor">@color/black_two</item>
        <item name="inputTextSize">18sp</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bright_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputStyle">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="ErrorInputStyle" parent="InputStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_hot_pink</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="PasswordInputStyle" parent="InputStyle">
        <item name="android:fontFamily">@font/itc_fg_std_book</item>
        <item name="android:maxLength">12</item>
        <item name="android:inputType">textPassword|textNoSuggestions</item>
    </style>

    <style name="NameInputStyle" parent="InputStyle">
        <item name="android:maxLength">40</item>
        <item name="android:inputType">textVisiblePassword</item>
    </style>

</resources>
